<p id="notice"><%= notice %></p>

<div id="user_space">
  <p>
  Login with email: <%= current_user.email %>
  <%= current_user.id %>
  </p>
 
</div>

<h1>Todos</h1>

<p><%= link_to("Generate Report CSV", todos_path(format: "csv")) %></p>
<p><%= link_to("Generate Report PDF", todos_path(format: "pdf")) %></p>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.description %></td>
        <td><%= todo.user_id %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path %>
